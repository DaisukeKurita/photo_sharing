<h1>Feeds</h1>

<div>
  <table>
    <thead>
      <tr>
        <th>Image</th>
        <th>Content</th>
        <th>User</th>
      </tr>
    </thead>

    <tbody>
        <% @feeds.each do |feed| %>
        <tr>
          <td><%= image_tag feed.image.url %></td>
          <td><%= feed.content %></td>
          <td><%= feed.user.name %></td>
          <td><%= link_to 'Show', feed, class: 'btn btn-info' %></td>
          <% if feed.user_id == current_user.id %>
          <td><%= link_to 'Edit', edit_feed_path(feed), class: 'btn btn-warning' %></td>
          <td><%= link_to 'Destroy', feed, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?'} %></td>
          <% end %>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Feed', new_feed_path %>
